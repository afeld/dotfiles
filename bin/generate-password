#!/bin/sh

# Usage:
#
#   generate-password <num-chars>
#
# `num-chars` defaults to 40.

set -euf -o pipefail

NUM_CHARS=${1-40}
# https://github.com/18F/cg-scripts/pull/18/files/1a38e626118bf4dfd622557128a2a829d275e5aa#r69313181
cat /dev/urandom | LC_ALL=C tr -dc 'a-zA-Z0-9!@#\$%^&\*\(\)\+=_' | head -c $NUM_CHARS
