#!/bin/bash

set -x

# update the dotfiles
# https://stackoverflow.com/a/242550/358804
BASEDIR=$(dirname "$0")
git -C "$BASEDIR" pull

# update the git plugins
git -C ~/dev/git-plugins pull

brew upgrade
brew cleanup

# https://github.com/ohmyzsh/ohmyzsh/wiki/FAQ#how-do-i-update-oh-my-zsh
~/.oh-my-zsh/tools/upgrade.sh
asdf plugin update --all

# install and use latest versions
# https://asdf-vm.com/manage/plugins.html#list-installed
for tool in $(asdf plugin list); do
  # https://asdf-vm.com/manage/versions.html#install-latest-stable-version
  asdf install "$tool" latest
  # https://asdf-vm.com/manage/versions.html#set-version
  asdf set -u "$tool" latest
  # just to be safe
  asdf reshim "$tool"
done

# ruby
gem update --system
gem update bundler

# node
npm update -g npm
npm update -g

# python
pip install -U pip
conda update -n base -c conda-forge conda --yes

gcloud components update --quiet
