[user]
	email = aidan.feldman@gmail.com
	name = Aidan Feldman
[core]
	excludesfile = ~/.gitignore
	editor = vim
[color]
	ui = true
[merge]
	conflictstyle = diff3
	keepBackup = false
	tool = custom
[github]
	user = afeld
[alias]
	# show top 15 remote branches with most recently updated commit - from https://coderwall.com/p/ndinba
	branches = for-each-ref --sort=-committerdate --format='%(committerdate:short) %(refname:short)' --count=15 refs/remotes/origin/
	# the newest tag
	latest = describe --abbrev=0 --tags
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	# merge, ignoring whitespace
	mw = merge -s recursive -Xignore-space-change
[branch]
	autosetupmerge = true
[mergetool "custom"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$REMOTE" "$PWD/$LOCAL" "$PWD/$MERGED"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = false
[push]
	# only push the current branch
	default = upstream
